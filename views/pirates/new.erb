    <input type="text" name="pirate[ships][][name]" id="ship_name_1"><br><br>
    <label for ="">Ship 1 Type</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_1"><br><br>
    <label for ="">Ship 1 Booty</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_1"><br><br>

    <h2>Ship 2 Information</h2>
    <label for ="">Ship 2 Name</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_2"><br><br>
    <label for ="">Ship 2 Type</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_2"><br><br>
    <label for ="">Ship 2 Booty</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_2"><br><br>

    <input type="submit" id="Submit">
</form>